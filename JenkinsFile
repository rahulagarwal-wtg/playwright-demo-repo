pipeline {
    agent any
    tools {
        maven 'Maven3'   // configure Maven under Jenkins → Global Tool Config
        jdk 'JDK17'      // configure JDK under Jenkins → Global Tool Config
    }
    stages {
        stage('Checkout') {
            steps {
                git branch: 'main',
                    url: 'git@github.com:rahulagarwal-wtg/playwright-demo-repo.git',
                    credentialsId: 'github-ssh'
            }
        }
        stage('Build & Test') {
            steps {
                sh 'mvn clean test'
            }
        }
        stage('Report') {
            steps {
                cucumber buildStatus: 'UNSTABLE', fileIncludePattern: '**/cucumber.json'
            }
        }
    }
}